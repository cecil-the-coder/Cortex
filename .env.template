# =============================================================================
# Cortex Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Keys - REQUIRED
# =============================================================================
ROUTER_API_KEY=your-router-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
OPENROUTER_API_KEY=your-openrouter-api-key

# =============================================================================
# Database Configuration (for database-backed deployments)
# =============================================================================
# Database Type: sqlite, mysql, or postgres
DB_TYPE=sqlite

# MySQL Configuration (when DB_TYPE=mysql)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=go_llm_router
DB_USER=router_user
DB_PASSWORD=your-mysql-password
MYSQL_ROOT_PASSWORD=your-mysql-root-password

# PostgreSQL Configuration (when DB_TYPE=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=go_llm_router
DB_USER=router_user
DB_PASSWORD=your-postgres-password

# SQLite Configuration (when DB_TYPE=sqlite)
SQLITE_PATH=./data/router.db

# Redis Configuration (optional, for enhanced caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8082
ADMIN_PORT=8081
ADMIN_HOST=localhost

# =============================================================================
# Security Configuration
# =============================================================================
# Enable HTTPS/TLS
ENABLE_TLS=false
TLS_CERT_FILE=./certs/server.crt
TLS_KEY_FILE=./certs/server.key

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Performance Tuning
# =============================================================================
# Maximum number of concurrent requests
MAX_CONCURRENT_REQUESTS=100

# Request timeout in seconds
REQUEST_TIMEOUT=120

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=1000

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/router.log

# =============================================================================
# Monitoring and Observability
# =============================================================================
# Enable Prometheus metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Enable health checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30

# Enable distributed tracing
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# =============================================================================
# Client API Keys (if using multi-tenant setup)
# =============================================================================
USER_1_API_KEY=user-1-api-key
USER_2_API_KEY=user-2-api-key
USER_3_API_KEY=user-3-api-key

# =============================================================================
# External Service Integration
# =============================================================================
# Webhook URL for provider events
WEBHOOK_URL=https://your-webhook-endpoint.com/events

# Slack webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn-here

# =============================================================================
# High Availability Configuration
# =============================================================================
INSTANCE_ID=router-1
CLUSTER_NAME=Cortex-cluster

# Replication settings (for enterprise setups)
REPLICATION_PASSWORD=your-replication-password

# =============================================================================
# Development/Testing Configuration
# =============================================================================
# Enable debug mode (do NOT use in production)
DEBUG=false

# Enable test endpoints
ENABLE_TEST_ENDPOINTS=false

# Mock provider responses for testing
MOCK_PROVIDERS=false

# =============================================================================
# Docker/Container Configuration
# =============================================================================
# Container memory limit in MB (for containerized deployments)
CONTAINER_MEMORY_LIMIT=512

# Container CPU limit
CONTAINER_CPU_LIMIT=1.0

# =============================================================================
# Backup Configuration
# =============================================================================
# Enable automatic backups
ENABLE_AUTO_BACKUP=true

# Backup interval (e.g., 6h, 12h, 24h)
BACKUP_INTERVAL=24h

# Backup retention policy (how many backups to keep)
BACKUP_RETENTION_COUNT=7

# Backup storage path
BACKUP_STORAGE_PATH=./backups

# =============================================================================
# Custom Configuration
# =============================================================================
# Path to custom configuration file (overrides all other settings)
CUSTOM_CONFIG_PATH=

# Additional environment-specific settings
CUSTOM_SETTING_1=
CUSTOM_SETTING_2=