{
  "Providers": [
    {
      "name": "anthropic",
      "authMethod": "api_key",
      "APIKEY": "${ANTHROPIC_API_KEY}",
      "baseURL": "https://api.anthropic.com/v1",
      "models": [
        "claude-3-5-sonnet-20241022",
        "claude-3-opus-20240229"
      ]
    },
    {
      "name": "openai",
      "authMethod": "api_key",
      "APIKEY": "${OPENAI_API_KEY}",
      "baseURL": "https://api.openai.com/v1",
      "models": [
        "gpt-4o",
        "gpt-4-turbo-preview"
      ]
    }
  ],
  "Router": {
    "default": "anthropic",
    "background": "openai",
    "longContextThreshold": 200000
  },
  "APIKEY": "${ROUTER_API_KEY}",
  "HOST": "0.0.0.0",
  "PORT": 8082,
  "Database": {
    "enabled": true,
    "primary": {
      "type": "postgres",
      "host": "${DB_HOST:-localhost}",
      "port": ${DB_PORT:-5432},
      "database": "${DB_NAME:-go_llm_router}",
      "username": "${DB_USER:-router_user}",
      "password": "${DB_PASSWORD}",
      "max_open_conns": 100,
      "max_idle_conns": 20,
      "conn_max_lifetime": "15m",
      "conn_max_idle_time": "5m",
      "batch_size": 500,
      "flush_interval": "1s"
    },
    "fallback": {
      "use_file_on_failure": true,
      "config_path": "config.json",
      "retry_delay": "45s",
      "sync_on_recovery": true
    },
    "cache": {
      "enabled": true,
      "ttl": "15m",
      "max_entries": 5000,
      "cleanup_interval": "3m"
    }
  }
}